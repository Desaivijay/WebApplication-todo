@page
@using WebApplication2.Models;
@{
}
@model List<ToDoItem>

<h1>To-Do List</h1>

<form method="post" action="@Url.Action("Add")">
    <input type="text" name="newItem" />
    <input type="submit" value="Add Item" />
</form>


@foreach (var todo in Model)
{
    <div>
        <input type="checkbox" name="isComplete" value="@todo.Id" @(todo.IsDone ? "checked" : "")/>
        <span>@todo.Name</span>
    </div>
}

@if (Model.Any())
{
    <form method="post" action="@Url.Action("DeleteAll")" style="margin-top: 20px;">
        <input type="submit" value="Delete All Items" />
    </form>
}